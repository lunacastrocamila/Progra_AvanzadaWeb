@model Proyecto_PrograAvanzada.Models.Tecnico

<div class="container mt-4">
    <div class="delete-container">
        <h1 class="delete-title">Eliminar Técnico</h1>
        <h3 class="delete-subtitle">¿Está seguro(a) de que desea eliminar este técnico?</h3>

        <dl class="row">
            <dt class="col-sm-3">Especialidad</dt>
            <dd class="col-sm-9">@Model.Especialidad</dd>

            <dt class="col-sm-3">Usuario</dt>
            <dd class="col-sm-9">@Model.IdUsuarioNavigation.Nombre</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdTecnico" />
            <div class="text-center">
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Cancelar</a>
            </div>
        </form>
    </div>
</div>
