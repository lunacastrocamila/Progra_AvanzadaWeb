@model Proyecto_PrograAvanzada.Models.Asignacion

<h1> Agregar Nueva Asignación</h1>

<h4>Asignación</h4>
<hr />
<div class="form-container">
    <h4 class="form-title">Detalles de la Asignación</h4>
    <hr />
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Create" class="custom-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdSolicitud" class="control-label"></label>
                <select asp-for="IdSolicitud" class ="form-control" asp-items="ViewBag.IdSolicitud"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdTecnico" class="control-label"></label>
                <select asp-for="IdTecnico" class ="form-control" asp-items="ViewBag.IdTecnico"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCierre" class="control-label"></label>
                <input asp-for="FechaCierre" class="form-control" />
                <span asp-validation-for="FechaCierre" class="text-danger"></span>
            </div>
                <div class="form-group text-center">
                    <input type="submit" value="Agregar" class="btn btn-primary custom-button" />
            </div>
        </form>
    </div>
</div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary return-button">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
