@model Proyecto_PrograAvanzada.Models.Asignacion

<h1>Edit</h1>

<h4>Asignación</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAsignacion" />
            <div class="form-group">
                <label asp-for="IdSolicitud" class="control-label"></label>
                <select asp-for="IdSolicitud" class="form-control" asp-items="ViewBag.IdSolicitud"></select>
                <span asp-validation-for="IdSolicitud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTecnico" class="control-label"></label>
                <select asp-for="IdTecnico" class="form-control" asp-items="ViewBag.IdTecnico"></select>
                <span asp-validation-for="IdTecnico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaAsignacion" class="control-label"></label>
                <input asp-for="FechaAsignacion" class="form-control" />
                <span asp-validation-for="FechaAsignacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCierre" class="control-label"></label>
                <input asp-for="FechaCierre" class="form-control" />
                <span asp-validation-for="FechaCierre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
