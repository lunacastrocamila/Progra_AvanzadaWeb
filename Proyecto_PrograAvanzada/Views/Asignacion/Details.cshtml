@model Proyecto_PrograAvanzada.Models.Asignacion

<div class="container mt-4">
    <div class="details-container">
        <h1 class="details-title">Detalles de la Asignación</h1>

        <dl class="row">
            <dt class="col-sm-3">Fecha de Asignación</dt>
            <dd class="col-sm-9">@Model.FechaAsignacion</dd>

            <dt class="col-sm-3">Fecha de Inicio</dt>
            <dd class="col-sm-9">@Model.FechaInicio</dd>

            <dt class="col-sm-3">Fecha de Cierre</dt>
            <dd class="col-sm-9">@Model.FechaCierre</dd>

            <dt class="col-sm-3">Solicitud</dt>
            <dd class="col-sm-9">@Model.IdSolicitudNavigation?.IdSolicitud</dd>

            <dt class="col-sm-3">Técnico</dt>
            <dd class="col-sm-9">@Model.IdSolicitudNavigation?.IdUsuarioNavigation?.Nombre</dd>
        </dl>

        <div class="text-center">
            <a asp-action="Edit" asp-route-id="@Model.IdAsignacion" class="btn btn-primary"><i class="bi bi-pencil"></i> Editar</a>
            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
        </div>
    </div>
</div>
