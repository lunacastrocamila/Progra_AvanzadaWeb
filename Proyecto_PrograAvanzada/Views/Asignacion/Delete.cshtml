@model Proyecto_PrograAvanzada.Models.Asignacion

<div class="container mt-4">
    <div class="delete-container">
        <h1 class="delete-title">Eliminar Asignación</h1>
        <h3 class="delete-subtitle">¿Está seguro(a) de que desea eliminar esta asignación?</h3>

        <dl class="row">
            <dt class="col-sm-3">Fecha de Asignación</dt>
            <dd class="col-sm-9">@Model.FechaAsignacion</dd>

            <dt class="col-sm-3">Fecha de Inicio</dt>
            <dd class="col-sm-9">@Model.FechaInicio</dd>

            <dt class="col-sm-3">Fecha de Cierre</dt>
            <dd class="col-sm-9">@Model.FechaCierre</dd>

            <dt class="col-sm-3">Solicitud</dt>
            <dd class="col-sm-9">@Model.IdSolicitudNavigation?.IdSolicitud</dd>

            <dt class="col-sm-3">Técnico</dt>
            <dd class="col-sm-9">@Model.IdTecnicoNavigation?.IdUsuarioNavigation?.Nombre</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdAsignacion" />
            <div class="text-center">
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Cancelar</a>
            </div>
        </form>
    </div>
</div>
