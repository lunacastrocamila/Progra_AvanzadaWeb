@{
    ViewData["Title"] = "Asignación";
}

@model IEnumerable<Proyecto_PrograAvanzada.Models.Asignacion>

<div class="container mt-4">
    <h1 class="text-center">Asignaciones</h1>

    <p class="text-end">
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Agregar Nueva</a>
    </p>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>Fecha de Asignación</th>
                <th>Fecha de Inicio</th>
                <th>Fecha de Cierre</th>
                <th>Solicitud</th>
                <th>Técnico</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var asignacion in Model)
            {
                <tr>
                    <td>@asignacion.FechaAsignacion?.ToString("dd/MM/yyyy")</td>
                    <td>@asignacion.FechaInicio?.ToString("dd/MM/yyyy")</td>
                    <td>@asignacion.FechaCierre?.ToString("dd/MM/yyyy")</td>
                    <td>@asignacion.IdSolicitudNavigation?.Descripcion</td>
                    <td>@asignacion.IdTecnicoNavigation?.IdUsuarioNavigation?.Nombre @asignacion.IdTecnicoNavigation?.IdUsuarioNavigation?.Apellido</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@asignacion.IdAsignacion" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@asignacion.IdAsignacion" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@asignacion.IdAsignacion" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
