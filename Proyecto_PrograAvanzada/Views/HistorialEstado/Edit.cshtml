@model Proyecto_PrograAvanzada.Models.HistorialEstado

<div class="container mt-4">
    <h1 class="edit-title">Editar Historial de Estado</h1>
    <div class="edit-container">
        <form asp-action="Edit" class="custom-form">
            <input type="hidden" asp-for="IdHistorial" />
            <div class="form-group mb-3">
                <label asp-for="IdSolicitud" class="control-label">Solicitud</label>
                <select asp-for="IdSolicitud" class="form-control" asp-items="ViewBag.IdSolicitud"></select>
                <span asp-validation-for="IdSolicitud" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EstadoAnterior" class="control-label">Estado Anterior</label>
                <input asp-for="EstadoAnterior" class="form-control" />
                <span asp-validation-for="EstadoAnterior" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EstadoNuevo" class="control-label">Estado Nuevo</label>
                <input asp-for="EstadoNuevo" class="form-control" />
                <span asp-validation-for="EstadoNuevo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Comentarios" class="control-label">Comentarios</label>
                <input asp-for="Comentarios" class="form-control" />
                <span asp-validation-for="Comentarios" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Guardar" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>
