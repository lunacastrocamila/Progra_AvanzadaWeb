@model Proyecto_PrograAvanzada.Models.HistorialEstado

<div class="container mt-4">
    <h1 class="form-title">Agregar Historial de Estado</h1>
    <h4>HistorialEstado</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="form-container">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-group mb-3">
                    <label asp-for="IdSolicitud" class="control-label"></label>
                    <select asp-for="IdSolicitud" class="form-control styled-select" asp-items="ViewBag.IdSolicitud"></select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="EstadoAnterior" class="control-label"></label>
                    <input asp-for="EstadoAnterior" class="form-control" placeholder="Ingrese el estado anterior" />
                    <span asp-validation-for="EstadoAnterior" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="EstadoNuevo" class="control-label"></label>
                    <input asp-for="EstadoNuevo" class="form-control" placeholder="Ingrese el nuevo estado" />
                    <span asp-validation-for="EstadoNuevo" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Comentarios" class="control-label"></label>
                    <input asp-for="Comentarios" class="form-control" placeholder="Agregue comentarios opcionales" />
                    <span asp-validation-for="Comentarios" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Agregar" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
