@model Proyecto_PrograAvanzada.Models.Usuario

<!DOCTYPE html>

<h1 class="edit-title">Editar Usuario</h1>

<div class="edit-container">
    <h4 lass="edit-section-title">Detalles del Usuario</h4>
    <hr class="edit-divider" />
<div class="row">
        <div class="col-md-6 edit-form-container">
            <form asp-action="Edit" class="edit-form">
                <div asp-validation-summary="ModelOnly" class="text-danger edit-validation-summary"></div>
            <input type="hidden" asp-for="IdUsuario" />
            <div class="form-group">
                    <label asp-for="Nombre" class="control-label edit-label"></label>
                    <input asp-for="Nombre" class="form-control edit-input" />
                    <span asp-validation-for="Nombre" class="text-danger edit-validation-message"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Apellido" class="control-label edit-label"></label>
                    <input asp-for="Apellido" class="form-control edit-input" />
                    <span asp-validation-for="Apellido" class="text-danger edit-validation-message"></span>
            </div>
            <div class="form-group">
                    <label asp-for="CorreoElectronico" class="control-label edit-label"></label>
                    <input asp-for="CorreoElectronico" class="form-control edit-input" />
                    <span asp-validation-for="CorreoElectronico" class="text-danger edit-validation-message"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Contraseña" class="control-label edit-label"></label>
                    <input asp-for="Contraseña" class="form-control edit-input" />
                    <span asp-validation-for="Contraseña" class="text-danger edit-validation-message"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Rol" class="control-label edit-label"></label>
                    <input asp-for="Rol" class="form-control edit-input" />
                    <span asp-validation-for="Rol" class="text-danger edit-validation-message"></span>
            </div>
                <div class="form-group edit-button-group">
                    <input type="submit" value="Guardar" class="btn btn-primary edit-save-button" />
            </div>
        </form>
    </div>
</div>
</div>

    <div class="edit-back-container">
        <a asp-action="Index" class="btn btn-secondary edit-back-button">Volver a la lista</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}