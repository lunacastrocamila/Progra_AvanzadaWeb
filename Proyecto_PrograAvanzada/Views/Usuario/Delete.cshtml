@model Proyecto_PrograAvanzada.Models.Usuario

<h1 class="delete-title">Eliminar</h1>

<h3 class="delete-subtitle">¿Seguro(a) que desea eliminar el usuario?</h3>
<div class="delete-container">
    <h4 class="delete-section">Usuario</h4>
    <hr />
    <dl class="row delete-details">
        <dt class="col-sm-2 delete-label">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10 delete-value">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2 delete-label">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class="col-sm-10 delete-value">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2 delete-label">
            @Html.DisplayNameFor(model => model.CorreoElectronico)
        </dt>
        <dd class="col-sm-10 delete-value">
            @Html.DisplayFor(model => model.CorreoElectronico)
        </dd>
        <dt class="col-sm-2 delete-label">
            @Html.DisplayNameFor(model => model.Contraseña)
        </dt>
        <dd class="col-sm-10 delete-value">
            @Html.DisplayFor(model => model.Contraseña)
        </dd>
        <dt class="col-sm-2 delete-label">
            @Html.DisplayNameFor(model => model.Rol)
        </dt>
        <dd class="col-sm-10 delete-value">
            @Html.DisplayFor(model => model.Rol)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="delete-form">
        <input type="hidden" asp-for="IdUsuario" />
        <input type="submit" value="Eliminar" class="btn btn-danger delete-button" /> |
        <a asp-action="Index" class="btn btn-secondary return-button">Volver a la lista</a>
    </form>
</div>
