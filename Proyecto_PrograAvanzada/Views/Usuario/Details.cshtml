@model Proyecto_PrograAvanzada.Models.Usuario

<h1 class="details-title">Detalles</h1>


<div class="details-container">
    <h4 class="details-section">Usuarios</h4>
    <hr />
    <dl class="row details-details">
        <dt class="col-sm-2 details-label">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10 details-value">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2 details-label">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class="col-sm-10 details-value">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2 details-label">
            @Html.DisplayNameFor(model => model.CorreoElectronico)
        </dt>
        <dd class="col-sm-10 details-value">
            @Html.DisplayFor(model => model.CorreoElectronico)
        </dd>
        <dt class="col-sm-2 details-label">
            @Html.DisplayNameFor(model => model.Contraseña)
        </dt>
        <dd class="col-sm-10 details-value">
            @Html.DisplayFor(model => model.Contraseña)
        </dd>
        <dt class="col-sm-2 details-label">
            @Html.DisplayNameFor(model => model.Rol)
        </dt>
        <dd class="col-sm-10 details-value">
            @Html.DisplayFor(model => model.Rol)
        </dd>
    </dl>
</div>
<div class="details-actions">
    <a asp-action="Edit" asp-route-id="@Model?.IdUsuario" class="btn btn-primary details-edit-button">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary details-return-button">Volver a la lista</a>
</div>
