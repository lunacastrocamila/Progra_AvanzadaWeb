@model IEnumerable<Proyecto_PrograAvanzada.Models.Solicitud>

<div class="container mt-4">
    <h1 class="text-center">Solicitudes</h1>

    <p class="text-end">
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Agregar Nueva</a>
    </p>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>Descripción</th>
                <th>Fecha de Creación</th>
                <th>Estado</th>
                <th>Prioridad</th>
                <th>Usuario</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var solicitud in Model)
            {
                <tr>
                    <td>@solicitud.Descripcion</td>
                    <td>@solicitud.FechaCreacion</td>
                    <td>@solicitud.Estado</td>
                    <td>@solicitud.Prioridad</td>
                    <td>@solicitud.IdUsuarioNavigation.Nombre</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@solicitud.IdSolicitud" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@solicitud.IdSolicitud" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@solicitud.IdSolicitud" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
