@model Proyecto_PrograAvanzada.Models.Solicitud

<h1 class="edit-title">Editar Solicitud</h1>

<div class="edit-container">
    <h4 lass="edit-section-title">Detalles de la solicitud</h4>
    <hr class="edit-divider" />
<div class="row">
        <div class="col-md-6 edit-form-container">
            <form asp-action="Edit" class="edit-form">
                <div asp-validation-summary="ModelOnly" class="text-danger edit-validation-summary"></div>
            <input type="hidden" asp-for="IdSolicitud" />
                <div class="form-group edit-field-group">
                    <label asp-for="IdUsuario" class="control-label edit-label"></label>
                    <select asp-for="IdUsuario" class="form-control edit-select" asp-items="ViewBag.IdUsuario"></select>
                    <span asp-validation-for="IdUsuario" class="text-danger edit-validation-message"></span>
            </div>
                <div class="form-group edit-field-group">
                    <label asp-for="Descripcion" class="control-label edit-label"></label>
                    <input asp-for="Descripcion" class="form-control edit-input" />
                    <span asp-validation-for="Descripcion" class="text-danger edit-validation-message"></span>
            </div>
                <div class="form-group edit-field-group">
                    <label asp-for="FechaCreacion" class="control-label edit-label"></label>
                    <input asp-for="FechaCreacion" class="form-control edit-input" />
                    <span asp-validation-for="FechaCreacion" class="text-danger edit-validation-message"></span>
            </div>
                <div class="form-group edit-field-group">
                    <label asp-for="Estado" class="control-label edit-label"></label>
                    <input asp-for="Estado" class="form-control edit-input" />
                    <span asp-validation-for="Estado" class="text-danger edit-validation-message"></span>
            </div>
                <div class="form-group edit-field-group">
                    <label asp-for="Prioridad" class="control-label edit-label"></label>
                    <input asp-for="Prioridad" class="form-control edit-input" />
                    <span asp-validation-for="Prioridad" class="text-danger edit-validation-message"></span>
            </div>
                <div class="form-group edit-button-group">
                    <input type="submit" value="Guardar" class="btn btn-primary edit-save-button" />
            </div>
        </form>
    </div>
</div>
</div>

<div class="edit-back-container">
    <a asp-action="Index" class="btn btn-secondary edit-back-button">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
