<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Soporte Técnico</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/technical-support.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid d-flex justify-content-center">
                <div class="d-flex align-items-center">
                    <a class="navbar-brand me-4" href="#"><img src="~/images/logo.png" alt="Logo" width="50" /></a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Index"><i class="fas fa-user"></i> Usuarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Tecnico" asp-action="Index"><i class="fas fa-headset"></i> Técnicos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Solicitud" asp-action="Index"><i class="fas fa-envelope"></i> Solicitudes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Asignacion" asp-action="Index"><i class="fas fa-tasks"></i> Asignación</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Notificacion" asp-action="Index"><i class="fas fa-bell"></i> Notificaciones</a>
                        </li>
                        <ul class="navbar-nav">
                            @if (Context.Session.GetInt32("UserId") != null)



                            {
                                <li class="nav-item">
                                    <span class="nav-link">Bienvenido, @Context.Session.GetString("UserName")</span>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Usuario" asp-action="Logout">Cerrar Sesión</a>
                                </li>
                            }



                            else



                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Usuario" asp-action="Login">Iniciar Sesión</a>
                                </li>
                            }
                        </ul>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white py-4">
        <div class="container text-center">
            <small>&copy; 2024 - Soporte Técnico - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light">Política de Privacidad</a></small>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>