@model Proyecto_PrograAvanzada.Models.Notificacion

<div class="container mt-4">
    <h1 class="form-title">Agregar Notificación</h1>
    <h4>Detalles de la Notificación</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="form-container">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-group mb-3">
                    <label asp-for="IdUsuario" class="control-label">Usuario</label>
                    <select asp-for="IdUsuario" class="form-control styled-select" asp-items="ViewBag.IdUsuario"></select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="IdSolicitud" class="control-label">Solicitud</label>
                    <select asp-for="IdSolicitud" class="form-control styled-select" asp-items="ViewBag.IdSolicitud"></select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Mensaje" class="control-label">Mensaje</label>
                    <input asp-for="Mensaje" class="form-control" placeholder="Ingrese el mensaje de la notificación" />
                    <span asp-validation-for="Mensaje" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Agregar" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
