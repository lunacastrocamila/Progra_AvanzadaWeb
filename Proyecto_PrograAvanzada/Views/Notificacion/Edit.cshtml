@model Proyecto_PrograAvanzada.Models.Notificacion

<div class="container mt-4">
    <div class="form-container">
        <h1 class="form-title">Editar Notificación</h1>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdNotificacion" />

            <div class="form-group">
                <label asp-for="IdUsuario"></label>
                <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdSolicitud"></label>
                <select asp-for="IdSolicitud" class="form-control" asp-items="ViewBag.IdSolicitud"></select>
                <span asp-validation-for="IdSolicitud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mensaje"></label>
                <input asp-for="Mensaje" class="form-control" />
                <span asp-validation-for="Mensaje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaNotificacion"></label>
                <input asp-for="FechaNotificacion" type="date" class="form-control" />
                <span asp-validation-for="FechaNotificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visto"></label>
                <input asp-for="Visto" class="form-control" />
                <span asp-validation-for="Visto" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Guardar</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
            </div>
        </form>
    </div>
</div>
