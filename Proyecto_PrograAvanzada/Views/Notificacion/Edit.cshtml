@model Proyecto_PrograAvanzada.Models.Notificacion

<h1 class="edit-title">Editar Notificacion</h1>

<div class="edit-container">
    <h4 class="edit-section-title">Notificación</h4>
    <hr class="edit-divider" />
<div class="row">
        <div class="col-md-6 edit-form-container">
            <form asp-action="Edit" class="edit-form">
                <div asp-validation-summary="ModelOnly" class="text-danger edit-validation-summary"></div>
            <input type="hidden" asp-for="IdNotificacion" />
                <div class="form-group edit-field-group">
                    <label asp-for="IdUsuario" class="control-label edit-label"></label>
                    <select asp-for="IdUsuario" class="form-control edit-select" asp-items="ViewBag.IdUsuario"></select>
                    <span asp-validation-for="IdUsuario" class="text-danger edit-validation-message"></span>
            </div>
                <div class="form-group edit-field-group">
                    <label asp-for="IdSolicitud" class="control-label edit-label"></label>
                    <select asp-for="IdSolicitud" class="form-control edit-select" asp-items="ViewBag.IdSolicitud"></select>
                    <span asp-validation-for="IdSolicitud" class="text-danger edit-validation-message"></span>
            </div>
                <div class="form-group edit-field-group">
                    <label asp-for="Mensaje" class="control-label edit-label"></label>
                    <input asp-for="Mensaje" class="form-control edit-select" />
                    <span asp-validation-for="Mensaje" class="text-danger edit-validation-message"></span>
            </div>
                <div class="form-group edit-field-group">
                    <label asp-for="FechaNotificacion" class="control-label edit-label"></label>
                    <input asp-for="FechaNotificacion" class="form-control edit-select" />
                    <span asp-validation-for="FechaNotificacion" class="text-danger edit-validation-message"></span>
            </div>
                <div class="form-group edit-field-group">
                    <label asp-for="Visto" class="control-label edit-label"></label>
                    <input asp-for="Visto" class="form-control edit-select" />
                    <span asp-validation-for="Visto" class="text-danger edit-validation-message"></span>
            </div>
                <div class="form-group edit-field-group">
                    <input type="submit" value="Guardar" class="btn btn-primary edit-save-button" />
            </div>
        </form>
    </div>
</div>

<div>
        <a asp-action="Index" class="btn btn-secondary edit-back-button">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
