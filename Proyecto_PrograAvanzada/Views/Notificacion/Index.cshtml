@model IEnumerable<Proyecto_PrograAvanzada.Models.Notificacion>

<div class="container mt-4">
    <h1 class="text-center">Notificaciones</h1>

    <p class="text-end">
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Agregar Nueva</a>
    </p>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>Mensaje</th>
                <th>Fecha de Notificación</th>
                <th>Visto</th>
                <th>Solicitud</th>
                <th>Usuario</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var notificacion in Model)
            {
                <tr>
                    <td>@notificacion.Mensaje</td>
                    <td>@notificacion.FechaNotificacion</td>
                    <td>@notificacion.Visto</td>
                    <td>@notificacion.IdSolicitudNavigation.IdSolicitud</td>
                    <td>@notificacion.IdUsuarioNavigation.Nombre</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@notificacion.IdNotificacion" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@notificacion.IdNotificacion" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@notificacion.IdNotificacion" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
